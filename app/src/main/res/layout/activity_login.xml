<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LoginFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/im_background"
    tools:context=".activities.LoginActivity">


    <ImageView
        android:id="@+id/login_iv_background"
        android:layout_width="wrap_content"
        android:layout_height="550dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="50dp"
        android:alpha="0.9"
        android:background="@drawable/background_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        android:contentDescription="@string/loginbackground" />


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/loginTab"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:background="@drawable/shape_tap"
        android:layoutMode="opticalBounds"
        android:splitMotionEvents="true"
        app:layout_constraintBottom_toBottomOf="@+id/login_iv_background"
        app:layout_constraintEnd_toEndOf="@+id/login_iv_background"
        app:layout_constraintStart_toStartOf="@+id/login_iv_background"
        app:layout_constraintTop_toTopOf="@+id/login_iv_background"
        app:layout_constraintVertical_bias="0.043">

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="339dp"
        android:layout_height="364dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/login_iv_background"
        app:layout_constraintEnd_toEndOf="@+id/login_iv_background"
        app:layout_constraintStart_toStartOf="@+id/login_iv_background"
        app:layout_constraintTop_toBottomOf="@+id/loginTab"
        app:layout_constraintVertical_bias="0.106" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Frlogin_fab_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:src="@drawable/im_facebook"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/login_iv_background"
        app:layout_constraintEnd_toStartOf="@+id/Frlogin_fab_facebook"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/viewPager"
        app:layout_constraintTop_toBottomOf="@+id/viewPager"
        app:layout_constraintVertical_bias="0.0"
        android:visibility="gone"
        app:tint="@null" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Frlogin_fab_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="16dp"
        android:src="@drawable/google"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/login_iv_background"
        app:layout_constraintEnd_toEndOf="@+id/viewPager"
        app:layout_constraintStart_toStartOf="@+id/viewPager"
        app:layout_constraintTop_toBottomOf="@+id/viewPager"
        app:layout_constraintVertical_bias="0.0"
        app:tint="@null" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Frlogin_fab_twitter"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:src="@drawable/im_twitter"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/login_iv_background"
        app:layout_constraintEnd_toEndOf="@+id/viewPager"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toEndOf="@+id/Frlogin_fab_facebook"
        app:layout_constraintTop_toBottomOf="@+id/viewPager"
        app:layout_constraintVertical_bias="0.0"
        app:tint="@null" />


</androidx.constraintlayout.widget.ConstraintLayout>